<resources>

    <style name="ComicListItem">
        <item name="cardForegroundColor">@color/comic_list_foreground</item>
        <item name="cardElevation">10dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="shapeAppearanceOverlay">@style/AppShapeOverlay.ComicListItem</item>
    </style>

    <style name="ScreenTextMessage">
        <item name="android:textColor">#78000000</item>
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
    </style>

    <style name="TextTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
    </style>

    <style name="AppTextAppearance.ViewerHelper" parent="">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
