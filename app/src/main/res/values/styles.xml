<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/cerulean</item>
        <item name="colorPrimaryDark">@color/light_blue_800</item>
        <item name="colorAccent">@color/deep_purple_400</item>
        <item name="colorControlHighlight">@color/light_blue_800</item>

        <item name="toolbarNavigationButtonStyle">@style/AppWidget.ToolbarNavigation</item>
        <item name="toolbarStyle">@style/AppWidget.Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetTheme</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/grey_50</item>
    </style>

    <style name="AppTheme.WhiteControl">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppBottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/cerulean</item>
        <item name="colorPrimaryDark">@color/light_blue_800</item>
        <item name="colorAccent">@color/deep_purple_400</item>
        <item name="colorControlHighlight">@color/light_blue_800</item>

        <item name="toolbarNavigationButtonStyle">@style/AppWidget.ToolbarNavigation</item>
        <item name="toolbarStyle">@style/AppWidget.Toolbar</item>
    </style>

    <style name="AppBottomSheetTheme.NonCollapsed">
        <item name="bottomSheetStyle">@style/AppWidget.BottomSheet.NonCollapsed</item>
    </style>

    <style name="AppBottomSheetTheme.FullScreen">
        <item name="bottomSheetStyle">@style/AppWidget.BottomSheet.NonCollapsed.FullScreen</item>
    </style>

    <style name="AppWidget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">#D9FFFFFF</item>
    </style>

    <style name="AppWidget.ToolbarNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="AppWidget.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@color/grey_50</item>
    </style>

    <style name="AppWidget.BottomSheet.NonCollapsed">
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="AppWidget.BottomSheet.NonCollapsed.FullScreen">
        <item name="behavior_fitToContents">false</item>
    </style>

    <style name="ScreenTextMessage">
        <item name="android:textColor">#78000000</item>
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
    </style>


</resources>
